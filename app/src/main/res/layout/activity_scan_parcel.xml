<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanParcel.ScanParcel">

    <me.dm7.barcodescanner.zxing.ZXingScannerView
        android:id="@+id/zxScan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </me.dm7.barcodescanner.zxing.ZXingScannerView>

    <Button
        android:id="@+id/bttnClear"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bttn_clear"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="210dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Please scan the parcel's QR code"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/bttnCheck"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bttn_blue"
        android:text="Check Data Collated"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="130dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
    </Button>

</RelativeLayout>