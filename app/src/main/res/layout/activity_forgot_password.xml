<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity.ForgotPassword"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="210dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/label_cainiao" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/label_forgotpassword" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/textbox_input" >


            <EditText
                android:id="@+id/txtUsername"
                android:singleLine="true"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="start"
                android:drawableLeft="@drawable/logo_username"
                android:drawablePadding="10dp"
                android:background="#00000000"
                android:hint="@string/username"
                android:textColorHint="#95ffffff"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/bttnCancelUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/bttn_cancel"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/textbox_input" >


            <EditText
                android:id="@+id/txtNewPassword"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="start"
                android:drawableLeft="@drawable/logo_password"
                android:drawablePadding="10dp"
                android:background="#00000000"
                android:hint="@string/newPassword"
                android:textColorHint="#95ffffff"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/bttnCancelNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/bttn_cancel"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/textbox_input" >

            <EditText
                android:id="@+id/txtConfirmNewPassword"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="start"
                android:drawableLeft="@drawable/logo_password"
                android:drawablePadding="10dp"
                android:background="#00000000"
                android:hint="@string/confirmNewPassword"
                android:textColorHint="#95ffffff"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/bttnCancelConfirmNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/bttn_cancel"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/bttnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:background="@drawable/bttn_blue"
        android:text="@string/changePassword"
        android:textColor="#ffff"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Remember your password?"
            android:textSize="12sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:text="LOGIN"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>